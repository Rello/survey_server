<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>
	<charset>utf8</charset>
	<table>
		<name>*dbprefix*survey_results</name>
		<declaration>
			<field>
				<name>category</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>128</length>
			</field>
			<field>
				<name>key</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>512</length>
			</field>
			<field>
				<name>value</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>1024</length>
			</field>
			<field>
				<name>source</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>512</length>
				<comments>source who reported the data</comments>
			</field>
			<field>
				<name>timestamp</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<length>4</length>
			</field>
			<index>
				<name>sh_survey_results</name>
				<field>
					<name>key</name>
					<sorting>ascending</sorting>
				</field>
				<field>
					<name>category</name>
					<sorting>ascending</sorting>
				</field>
			</index>
			<index>
				<name>ss_source</name>
				<field>
					<name>source</name>
				</field>
			</index>
		</declaration>
	</table>
</database>
